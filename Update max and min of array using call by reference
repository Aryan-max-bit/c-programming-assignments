#include <stdio.h>

void findMinMax(int arr[], int n, int *min, int *max) {
    *min = *max = arr[0];
    for(int i = 1; i < n; i++) {
        if(arr[i] < *min)
            *min = arr[i];
        if(arr[i] > *max)
            *max = arr[i];
    }
}

void main() {
    int arr[5], min, max;

    printf("Enter 5 elements: ");
    for(int i = 0; i < 5; i++)
        scanf("%d", &arr[i]);

    findMinMax(arr, 5, &min, &max);

    printf("Minimum value = %d\n", min);
    printf("Maximum value = %d\n", max);
   
}
