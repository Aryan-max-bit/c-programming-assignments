#include <stdio.h>

void main() {
    int units;
    float bill;   // use float because of decimals

    printf("enter unit value\n");
    scanf("%d", &units);

    if(units <= 100) {
        bill = units * 1.5;
    }
    else if(units > 100 && units <= 300) {
        bill = (100 * 1.5) + (units - 100) * 2.5;
    }
    else {
        bill = (100 * 1.5) + (200 * 2.5) + (units - 300) * 4.0;
    }

    printf("Total bill = %.f\n", bill);
}